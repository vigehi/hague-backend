<div id="<%= dom_id status %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Staus name:</strong>
    <%= status.status_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= status.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this status", status, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this status", edit_status_path(status), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
